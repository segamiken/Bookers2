

<h1>User info</h1>
	<%= form_for(@user) do |f| %>
<h4>Name</h4>
	<%=f.text_field :name %>
<h4>image</h4>
    <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>

<h4>Introduction</h4>
	<%= f.text_field :introduction %>


	<%=f.submit 'Update User' %>
	<% end %>