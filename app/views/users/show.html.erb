<% if flash[:notice] %>
	<div class="flash">
     	<%= flash[:notice] %>
    </div>
<% end %>


<div class="container">
<div class="row">

<div class="col-lg-3">
	<h1>User info</h1>

	<%= attachment_image_tag @user, :profile_image,　format: 'jpeg', size: "100x100", fallback: "img/no_image.jpg" %>

<table class="table table-striped">
	<tr>
		<th>name</th>
		<th><%= @user.name %></th>
	</tr>

	<tr>
		<th>introduction</th>
		<th><%= @user.introduction %></th>
	</tr>
</table>

<% if @user == current_user %>
<%= link_to "プロフィール編集", edit_user_path(@user) %>
<% else %>
<%= link_to "プロフィール編集", user_path(current_user.id) %>
<% end %>


<h1>New Book</h1>
	<%= form_for(@book) do |f| %>
<h4>Title</h4>
	<%=f.text_field :title %>
<h4>Opinion</h4>
	<%=f.text_area :body %> <br>

	<%=f.submit 'Create Book', class:"btn btn-primary" %>
	<% end %>

</div>




<div class="col-lg-9">
	<h1>Books</h1>
	<table class="table">
		<tr>
			<th></th>
			<th>Title</th>
			<th>Opiniton</th>
		</tr>

<% @books.each do |book| %>
		<tr>
			<th><%= attachment_image_tag book.user, :profile_image,　format: 'jpeg', size: "40x40" %></th>
			<th><%=link_to book.title, book_path(book.id) %></th>
			<th><%= book.body %></th>
		</tr>
<% end %>
	</table>
</div>

</div>
</div>