<% if @book.errors.any? %>
   <h2>error</h2>
<% end %>
<%= render 'layouts/flash_messages' %>


<div class="container">
<div class="row">

<div class="col-lg-3">

	<div>
		<p>本の検索</p>
		<%= form_tag(books_path, :method => 'get') do %>
		<%= text_field_tag :search %>
		<%= submit_tag 'search' %>
		<% end %>
	</div>


	<h1>User info</h1>
	<%= attachment_image_tag current_user, :profile_image,　format: 'jpeg', size: "100x100", fallback: "img/no_image.jpg" %>

<table class="table table-striped">
	<tr>
		<th>name</th>
		<th><%= current_user.name %></th>
	</tr>
	<tr>
		<th>introduction</th>
		<th><%= current_user.introduction %></th>
	</tr>

	<tr>
		<th>
			<i class="fas fa-male fa-2x"></i>
			<%= link_to "#{current_user.followings.count}  Following", follows_user_path(current_user.id) %>
		</th>
	</tr>
	<tr>
		<th>
			<i class="fas fa-male fa-2x"></i>
			<%= link_to "#{current_user.followers.count} Followers", followers_user_path(current_user.id) %>
		</th>
	</tr>
</table>

<%= link_to "プロフィール編集", edit_user_path(current_user) %>


<h1>New Book</h1>
	<%= form_for(@book) do |f| %>
<h4>Title</h4>
	<%=f.text_field :title %>
<h4>Opinion</h4>
	<%=f.text_area :body %> <br>

	<%=f.submit 'Create Book', class:"btn btn-primary" %>
	<% end %>



</div>



<div class="col-lg-9">
	<h1>Books</h1>
	<table class="table">
		<tr>
			<th>投稿者</th>
			<th>Title</th>
			<th>opinion</th>
		</tr>

<% @books.each do |book| %>
		<tr>
			<th>
				<%=link_to user_path(book.user) do %>
					<%= attachment_image_tag book.user, :profile_image,　format: 'jpeg', size: "40x40", fallback: "img/no_image.jpg" %>
				<% end %>
			</th>
			<th><%=link_to book.title, book_path(book.id) %></th>
			<th><%= book.body %></th>
			<th>
				<i class="fa fa-thumbs-up fa-2x"></i>
      			<%= book.favorites.count %>いいね
			</th>
		</tr>
<% end %>
	</table>
</div>

</div>
</div>