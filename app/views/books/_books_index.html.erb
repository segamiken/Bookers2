<div class="col-lg-9">
	<h1>Books</h1>
	<table class="table">
		<tr>
			<th>投稿者</th>
			<th>Title</th>
			<th>opinion</th>
		</tr>

<div class="book_index">
<% books.each do |book| %>
		<tr>
			<th>
				<%=link_to user_path(book.user) do %>
					<%= attachment_image_tag book.user, :profile_image,　format: 'jpeg', size: "40x40", fallback: "img/no_image.jpg" %>
				<% end %>
			</th>
			<th><%=link_to book.title, book_path(book.id) %></th>
			<th><%= book.body %></th>
			<th>
				<i class="fa fa-thumbs-up fa-2x"></i>
      			<%= book.favorites.count %>いいね
			</th>
		</tr>
<% end %>
</div>
	</table>
</div>